<!DOCTYPE html>
<html>
<head>
  <title>ShareYourStory</title>
  <style>
    :root {
      --bg: #f9f9f9;
      --text: #222;
      --card: #fff;
      --primary: #007bff;
      --input-bg: #f7faff;
      --input-shadow: #007bff11;
    }
    [data-theme="dark"] {
      --bg: #181a1b;
      --text: #f3f3f3;
      --card: #23272a;
      --primary: #4f8cff;
      --input-bg: #23272a;
      --input-shadow: #4f8cff22;
    }
    body { font-family: Arial, sans-serif; max-width: 400px; margin: 40px auto; background: var(--bg); color: var(--text); }
    h1 { text-align: center; }
    .logo { text-align: center; font-size: 2.2em; margin: 20px 0 10px 0; font-weight: bold; letter-spacing: 2px; color: var(--primary); }
    .toggle-mode { display: inline-block; margin-bottom: 16px; cursor: pointer; font-size: 1.2em; background: none; border: none; color: var(--primary); float: right; }
    form, .card {
      background: var(--card) !important;
      color: var(--text) !important;
      box-shadow: 0 2px 8px var(--input-shadow);
    }
    select, option {
      background: var(--card);
      color: var(--text);
    }
    form { background: var(--card); padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px #eee; }
    input { width: 100%; margin-bottom: 10px; padding: 8px; border-radius: 4px; border: 1px solid #ccc; background: var(--input-bg); box-shadow: 0 2px 8px var(--input-shadow), 0 1.5px 0 #fff inset; transition: box-shadow 0.2s, border 0.2s; color: var(--text); }
    input:focus { border: 1.5px solid var(--primary); box-shadow: 0 4px 16px var(--input-shadow), 0 1.5px 0 #fff inset; outline: none; background: var(--card); }
    button { padding: 10px 20px; border: none; background: var(--primary); color: #fff; border-radius: 4px; cursor: pointer; }
    button:hover { background: #0056b3; }
    .error { color: red; margin-bottom: 10px; }
    a { text-decoration: none; color: var(--primary); }
  </style>
</head>
<body>
  <div class="aurora-bg">
    <div class="aurora-anim aurora1"></div>
    <div class="aurora-anim aurora2"></div>
    <div class="aurora-anim aurora3"></div>
    <div class="aurora-anim aurora4"></div>
  </div>
  <div class="logo">ShareYourStory</div>
  <h1>Login</h1>
  <button class="toggle-mode" id="toggleMode" title="Toggle light/dark mode">ðŸŒ™</button>
  <form method="POST" action="/login">
    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>
    <input name="username" placeholder="Username" required />
    <input name="password" type="password" placeholder="Password" required />
    <button type="submit">Login</button>
  </form>
  <p>Don't have an account? <a href="/signup">Sign up</a></p>
  <script>
    // Light/Dark mode toggle
    const toggleBtn = document.getElementById('toggleMode');
    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
      toggleBtn.textContent = theme === 'dark' ? 'â˜€ï¸' : 'ðŸŒ™';
    }
    toggleBtn.onclick = () => {
      const current = document.documentElement.getAttribute('data-theme') || 'light';
      setTheme(current === 'light' ? 'dark' : 'light');
    };
    // On load
    setTheme(localStorage.getItem('theme') || 'light');
  </script>
</body>
</html> 