<!DOCTYPE html>
<html>
<head>
  <title>ShareYourStory</title>
  <style>
    body { font-family: Arial, sans-serif; max-width: 600px; margin: 40px auto; background: #f9f9f9; }
    h1 { text-align: center; }
    .logo { text-align: center; font-size: 2.2em; margin: 20px 0 10px 0; font-weight: bold; letter-spacing: 2px; color: #007bff; }
    .notif { background: #fff; padding: 15px; border-radius: 8px; box-shadow: 0 2px 8px #eee; margin-bottom: 12px; }
    .unread { background: #e3f2fd; }
    .timestamp { font-size: 12px; color: #888; }
    .btn { padding: 8px 16px; border: none; background: #007bff; color: #fff; border-radius: 4px; cursor: pointer; }
    .btn:hover { background: #0056b3; }
    a { text-decoration: none; color: #007bff; }
  </style>
</head>
<body>
  <div class="logo">ShareYourStory</div>
  <h1>Notifications</h1>
  <form method="POST" action="/notifications/read" style="text-align:right;margin-bottom:20px;">
    <button class="btn" type="submit">Mark all as read</button>
  </form>
  <% if (notifications.length === 0) { %>
    <p>No notifications.</p>
  <% } else { %>
    <% notifications.forEach(function(n) { %>
      <div class="notif <%= n.read ? '' : 'unread' %>">
        <div><%= n.message %></div>
        <div class="timestamp"><%= new Date(n.timestamp).toLocaleString() %> <%= n.read ? '' : '(unread)' %></div>
      </div>
    <% }); %>
  <% } %>
  <p><a href="/">&larr; Back to home</a></p>
</body>
</html> 